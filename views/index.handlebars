<div class="container">

  <div class="row">
    <div class="col-12 center">
      <h1>Burger Refill</h1>

      <!-- image here -->

    </div>
  </div>

  <div class="row">

    <div class="col-4 center">
      <h2>Burgers available</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4 center">
      <h2>Add a burger</h2>

      <form action="#">
        <input class="form-control" id="burger-input" type="text" placeholder="A Really Good Burger">

        <button type="submit" id="order-burger" class="btn btn-primary mb-2">Order!</button>
      </form>
    </div>

    <div class="col-4 center">
      <h2>Burgers ate</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>
