<div class="container">

  <div class="row py-4">
    <div class="col-12 center">
      <h1 class="red-font py-3">BURGER REFILL</h1>

      <svg width="400" height="250">
          <rect x="50" y="200" width="300" height="50" style="fill:rgb(229,203,122)"/>
          <rect x="50" y="150" width="300" height="50" style="fill:rgb(50,199,4)"/>
          <rect x="50" y="100" width="300" height="50" style="fill:rgb(69,1,1)"/>
          <rect x="50" y="50"  width="300" height="50" style="fill:rgb(236,53,33)"/>
          <rect x="50" y="0"   width="300" height="50" style="fill:rgb(229,203,122)"/>
      </svg>

    </div>
  </div>

  <div class="row">

    <div class="col-4 center">
      <h2>Menu</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{this.burger_name}}
              <button type="button" data-burger-id="{{this.id}}" class="btn btn-default btn-sm eat-burger">
                <span class="fa fa-bars red-font"></span>
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4 center">
      <h2>Customiz your burger</h2>

      <form action="#">
        <input class="form-control" id="burger-input" type="text" placeholder="A Really Good Burger">
        <br>
        <button type="submit" id="order-burger" class="btn btn-secondary mb-2">Order!</button>
      </form>
    </div>

    <div class="col-4 center">
      <h2>Devoured</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{this.burger_name}}
              <button type="button" data-burger-id="{{this.id}}" class="btn btn-default btn-sm remove-burger">
                <span class="fa fa-times-circle red-font"></span>
              </button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>
